# ---------------------------------------------
# Verberg .html extensies in de URL
# ---------------------------------------------
RewriteEngine On

# Zorg dat bestaande bestanden of mappen niet overschreven worden
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Herschrijf URLâ€™s zonder .html naar de juiste pagina
RewriteRule ^([^/]+)/?$ $1.html [L]
